import LetterGlitch from "../LetterGlitch.tsx";
---

<section
  id="hero"
  class="min-h-screen flex flex-col justify-center items-center text-center px-4"
>
  <div class="w-full h-full bg-transparent -z-10 absolute opacity-7">
    <LetterGlitch
      client:load
      glitchColors={["#C5CDD9", "#C2F2ED", "#4E6260"]}
      glitchSpeed={90}
      centerVignette={true}
      outerVignette={true}
      smooth={true}
    />
  </div>
  <h1
    class="text-4xl md:text-6xl mb-8 text-cornflower-blue font-[Industry] font-normal"
  >
    Automation At Your Fingertips
  </h1>
  <!-- <h1
    class="text-4xl md:text-6xl text-cornflower-blue font-[Industry] font-normal mb-6"
  >
  </h1> -->
  <p class="text-lg md:text-xl max-w-2xl mb-8 font-light">
    Ancillabs designs and implements custom automation workflows to connect your apps,
    streamline processes, and free your team to focus on innovation and growth.
  </p>
  <p class="text-lg md:text-xl max-w-2xl mb-6 italic font-light">
    Reclaim Your Time.
  </p>
  <a
    href="#contact"
    class="px-6 py-3 bg-pale-aqua text-[#0D1117] rounded-xs hover:shadow-[0_0px_25px_rgba(194,242,237,0.4)] transition font-medium"
  >
    Automate Your Business Now
  </a>
</section>
